# ========================================
# AI Code Explorer - Environment Variables
# ========================================
# Copy this file to .env and uncomment/modify values as needed

############################## AI Service Configuration ##############################
PORT="8000"
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
CHROMA_STORE_PATH="./chroma_store"
LLM_MODEL="gemma3"
MAX_CONTEXT_LENGTH="12000"

######################### Backend Service Configuration #########################
RUST_LOG="info"
APP_PORT="8080"
MONGO_DB_NAME="code_explorer"

######################### Local Development (Default) #########################
MONGO_URI="mongodb://root:example@localhost:27017"
AI_SERVICE_URL="http://localhost:8000"
FRONTEND_API_URL="http://localhost:3000"

######################### Docker/Production (Uncomment when deploying) #########################
# MONGO_URI="mongodb://root:example@mongo:27017"
# AI_SERVICE_URL="http://ai-service:8000"
# FRONTEND_API_URL="https://your-domain.com"
# RUST_LOG="warn"

